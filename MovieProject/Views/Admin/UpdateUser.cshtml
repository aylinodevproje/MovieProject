@model User
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<form class="form-signin" action="@Context.Request.Path" method="post">

    <input type="hidden" asp-for="ID" />

    <h2 class="card-title">Kullanıcı Güncelle</h2>

    <div class="btn-danger btn-block validation-summary-valid" style="margin-bottom:10px;" data-valmsg-summary="true">
        <ul>
            <li style="display:none"></li>
        </ul>
    </div>

    <input asp-for="FullName" type="text" style="margin-bottom:10px;font-size:14px;" class="form-control" placeholder="Ad Soyad" autofocus required="">

    <input asp-for="UserName" type="text" style="margin-bottom:10px;font-size:14px;" class="form-control" placeholder="Kullanıcı Adı" autofocus required="">

    <input asp-for="Email" type="text" style="margin-bottom:10px;font-size:14px;" class="form-control" placeholder="E-posta" autofocus required="">

    <input asp-for="Password" type="text" style="margin-bottom:10px;font-size:14px;" class="form-control" placeholder="Şifre" autofocus required="">

    <select class="form-control" asp-for="IsAdmin" style="margin-bottom:10px;font-size:14px;">
        @if (!Model.IsAdmin)
        {
            <option value="false" selected="selected">Normal Kullanıcı</option>
            <option value="true">Admin</option>
        }
        else
        {
            <option value="false">Normal Kullanıcı</option>
            <option value="true" selected="selected">Admin</option>
        }
    </select>

    <input class="btn btn-lg btn-primary btn-block" style="font-size:14px;" type="submit" value="Kaydet">
</form>