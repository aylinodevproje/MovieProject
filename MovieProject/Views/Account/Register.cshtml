@model RegisterViewModel

<div class="col-md-8" style="margin: 35px 10px 21px -19px;">

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">

                    <form class="form-signin" asp-controller="Account" asp-action="Register" method="post">
                        <h2 class="card-title">Üyelik Oluştur</h2>
                        <p>Üyelik oluşturmak için aşağıda bulunan alanları doldurunuz ve kayıt ol tuşuna basınız.</p>
                        <div class="btn-danger btn-block" style="margin-bottom:10px;" asp-validation-summary="All"></div>

                        <input type="text" asp-for="FullName" class="form-control" style="margin-bottom:10px;" placeholder="Adı Soyadı" required autofocus>

                        <input type="text" asp-for="UserName" class="form-control" style="margin-bottom:10px;" placeholder="Kullanıcı adı" required autofocus>

                        <input type="text" asp-for="Email" class="form-control" style="margin-bottom:10px;" placeholder="E-posta" required autofocus>

                        <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Üye Ol
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
