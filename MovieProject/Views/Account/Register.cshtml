@model RegisterViewModel

<div class="col-md-8" style="margin: 35px 10px 21px -19px;">

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">

                    <form class="form-signin"
                          action="@CultureHelper.GetValue("RegisterLink", Context)"
                          method="post">

                        <h2 class="card-title">@CultureHelper.GetValue("Register", Context)</h2>

                        <p>@CultureHelper.GetValue("RegisterText", Context)</p>

                        @* Kullanıcı kayıt sırasında hata ile karşılaşırsa alacağı tüm hataların gösterimi *@
                        <div class="btn-danger btn-block" style="margin-bottom:10px;" asp-validation-summary="All"></div>

                        @*İsim Alanı*@
                        <input type="text" asp-for="FullName"
                               class="form-control"
                               style="margin-bottom:10px;"
                               placeholder="@CultureHelper.GetValue("FullName", Context)"
                               required=""
                               oninvalid="this.setCustomValidity('@CultureHelper.GetValue("InputErrorMessage", Context)')"
                               oninput="setCustomValidity('')"
                               autofocus>

                        @*Kullanıcı adı alanı*@
                        <input type="text" asp-for="UserName"
                               class="form-control"
                               style="margin-bottom:10px;"
                               placeholder="@CultureHelper.GetValue("UserName", Context)"
                               required=""
                               oninvalid="this.setCustomValidity('@CultureHelper.GetValue("InputErrorMessage", Context)')"
                               oninput="setCustomValidity('')"
                               autofocus>

                        @*E-posta alanı*@
                        <input type="text" asp-for="Email"
                               class="form-control"
                               style="margin-bottom:10px;"
                               placeholder="@CultureHelper.GetValue("Email", Context)"
                               required=""
                               oninvalid="this.setCustomValidity('@CultureHelper.GetValue("InputErrorMessage", Context)')"
                               oninput="setCustomValidity('')" autofocus>

                        @*Şifre alanı*@
                        <input type="password" asp-for="Password"
                               class="form-control"
                               placeholder="@CultureHelper.GetValue("Password", Context)"
                               required=""
                               oninvalid="this.setCustomValidity('@CultureHelper.GetValue("InputErrorMessage", Context)')"
                               oninput="setCustomValidity('')">

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            @CultureHelper.GetValue("Register", Context)
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>