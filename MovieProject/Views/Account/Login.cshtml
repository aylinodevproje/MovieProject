@model LoginViewModel

<div class="col-md-8" style="margin: 35px 10px 21px -19px;">

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">

                    <form class="form-signin" action="@CultureHelper.GetValue("LoginLink", Context)" method="post">

                        <h2 class="card-title">@CultureHelper.GetValue("Login", Context)</h2>

                        <p>@CultureHelper.GetValue("LoginText", Context)</p>

                        <div class="btn-danger btn-block" style="margin-bottom:10px;" asp-validation-summary="All"></div>

                        <input type="text" asp-for="UserName" class="form-control" style="margin-bottom:10px;" placeholder="@CultureHelper.GetValue("EmailOrUserName", Context)" autofocus required="" oninvalid="this.setCustomValidity('@CultureHelper.GetValue("InputErrorMessage", Context)')"
                               oninput="setCustomValidity('')">

                        <input type="password" asp-for="Password" class="form-control" placeholder="@CultureHelper.GetValue("Password", Context)" required="" oninvalid="this.setCustomValidity('@CultureHelper.GetValue("InputErrorMessage", Context)')"
                               oninput="setCustomValidity('')">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            @CultureHelper.GetValue("Login", Context)
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>