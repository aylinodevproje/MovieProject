<!DOCTYPE html>
<html>
<head>
    <title> Film Portalı | Aylin Yılmaz</title>
    <link href="/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="/lib/jquery/dist/jquery.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: brown;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Movie" asp-action="Index" class="navbar-brand">
                    Film Portalı
                </a>
            </div>
            <div class=" collapse navbar-collapse  ">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Movie" asp-action="Index">
                            <i class="fa fa-home" aria-hidden="true"></i>
                            Anasayfa
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item" >
                            <a class="nav-link" href="#" >
                                <i class="fa fa-user" aria-hidden="true"></i>
                                @User.Identity.Name
                            </a>
                        </li>
                        <li class="nav-item" >

                            <a class="nav-link"  asp-controller="Account" asp-action="LogOut"style="background-color: gray">
                                <i class="fa fa-key" aria-hidden="true"></i>
                                Çıkış Yap

                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"  >
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="fa fa-user-plus" aria-hidden="true"></i>
                                Üye Ol
                            </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fa fa-key" aria-hidden="true"></i>
                                Giriş Yap
                            </a>
                        </li>
                    }


                    <li class="nav-item ">
                        <a class="nav-link" href="GirisYap"><i class="fa fa-language" aria-hidden="true"></i> Türkçe </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <div class="clearfix"></div>
            <p>&copy; 2021-Aylin Yılmaz</p>
        </footer>
    </div>
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>

</body>
</html>